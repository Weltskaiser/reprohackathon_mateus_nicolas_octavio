// nextflow.config — configuração mínima e estável

process {
    executor = 'local'              // executa localmente
    cpus = 1                        // cada processo usa 1 CPU
    memory = '4 GB'                 // limite máximo por processo
    time = '2h'                     // tempo máximo (ajuste se necessário)
    errorStrategy = 'retry'         // tenta novamente se falhar
    maxRetries = 1
    scratch = true                  // usa diretório temporário local
}

docker {
    enabled = true                  // ativa Docker
    runOptions = '-u \$(id -u):\$(id -g)' // evita problemas de permissão
}

timeline {
    enabled = true                  // opcional: gera arquivo HTML com tempos
    file = 'results/timeline.html'
}

trace {
    enabled = true                  // registra métricas de execução
    file = 'results/trace.txt'
}

workDir = 'work'                    // diretório temporário padrão
publishDirMode = 'copy'             // evita erros de permissão em bind mounts

